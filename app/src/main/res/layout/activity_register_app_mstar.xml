<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="match_parent">
	<id.co.kynga.app.control.RecyclingImageView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:src="@drawable/kyngmob_background"
		android:scaleType="fitXY" />
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		<android.support.v7.widget.Toolbar
			android:layout_width="match_parent"
			android:layout_height="@dimen/dimenTopBar"
			android:gravity="center_vertical"
			android:background="@android:color/transparent">
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingRight="15dp"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<ImageButton
					android:id="@+id/btn_back"
					android:layout_width="@dimen/dimenButtonTopBar"
					android:layout_height="@dimen/dimenButtonTopBar"
					android:background="@android:color/transparent"
					android:src="@drawable/ic_back"
					android:scaleType="fitXY" />
			</LinearLayout>
		</android.support.v7.widget.Toolbar>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingLeft="60dp"
			android:paddingRight="60dp"
			android:paddingBottom="30dp"
			android:gravity="center|top"
			android:orientation="vertical">
			<id.co.kynga.app.control.RecyclingImageView
				android:layout_width="200dp"
				android:layout_height="80dp"
				android:src="@drawable/ic_logo_thundr_big"
				android:scaleType="fitXY"
				android:layout_marginBottom="60dp"
				/>

			<TextView
				android:id="@+id/lbl_verify"
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:layout_marginLeft="1dp"
				android:text="@string/register_new_account"
				style="@style/MStarTextView2"
				android:textSize="@dimen/text_size_large"
				android:textStyle="bold"/>

			<android.support.design.widget.TextInputLayout
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:theme="@style/MStarTextFloat"
				style="@style/MStarTextFloat"
				android:background="@color/white"
				android:textColorHint="@color/Black">
				<android.support.v7.widget.AppCompatEditText
					android:id="@+id/txt_fullname"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:hint="@string/hint_full_name"
					android:theme="@style/MStarEditText2"
					style="@style/MStarEditText2"
                    android:textColor="@color/md_grey_400"
                    android:textColorHint="@color/md_grey_400"
					android:layout_marginBottom="5dp"
					android:layout_marginLeft="20dp" />
			</android.support.design.widget.TextInputLayout>
			<android.support.design.widget.TextInputLayout
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:layout_marginTop="10dp"
				android:theme="@style/MStarTextFloat"
				style="@style/MStarTextFloat"
				android:background="@color/white"
				android:textColorHint="@color/Black">
				<android.support.v7.widget.AppCompatEditText
					android:id="@+id/txt_email"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:hint="@string/hint_e_mail"
					android:theme="@style/MStarEditText2"
					android:textAlignment="center"
                    android:textColor="@color/md_grey_400"
                    android:textColorHint="@color/md_grey_400"
					android:layout_marginBottom="7dp"
					android:layout_marginLeft="20dp"
					style="@style/MStarEditText2" />
			</android.support.design.widget.TextInputLayout>

			<CheckBox
				android:text="@string/agreement"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/checkBox"
				android:textSize="12sp"
				android:layout_gravity="left"
				android:layout_marginTop="80dp"
				android:checked="false" />

			<ImageButton
				android:id="@+id/btn_register"
				android:layout_width="@dimen/dimenButtonWidth"
				android:layout_height="@dimen/dimenButtonHeight"
				android:src="@drawable/bg_submit2"
				android:background="@android:color/transparent"
				android:scaleType="fitXY" />
			<ScrollView
				android:id="@+id/SCROLLER_ID"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:scrollbars="vertical"
				android:fillViewport="true"
				android:visibility="gone">
				<TextView
					android:id="@+id/textRespon"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:text="respon"
					android:scrollbars="vertical"
					/>
			</ScrollView>
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>