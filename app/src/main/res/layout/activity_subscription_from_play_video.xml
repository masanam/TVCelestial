<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center|top"
	android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/kyngmob_background">

	<!-- Stop auto focussing the EditText -->
	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:background="@android:color/transparent"
		android:focusable="true"
		android:focusableInTouchMode="true">
	</LinearLayout>

	<android.support.v7.widget.Toolbar
		android:layout_width="match_parent"
		android:layout_height="@dimen/dimenTopBar"
		android:gravity="center_vertical"
		android:background="@android:color/transparent">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingRight="15dp"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<ImageButton
				android:id="@+id/btn_back"
				android:layout_width="@dimen/dimenButtonTopBar"
				android:layout_height="@dimen/dimenButtonTopBar"
				android:background="@android:color/transparent"
				android:src="@drawable/ic_back"
				android:scaleType="fitXY" />
			<TextView
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="right|center"
				android:text="Buy Blockbuster Subscription"
				style="@style/MStarTextView2" />
		</LinearLayout>
	</android.support.v7.widget.Toolbar>

	<LinearLayout android:layout_width="match_parent"
		android:layout_height="500dp"
		android:padding="5dp"
		android:gravity="center|top"
		android:orientation="vertical"
		>

		<TableRow
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:id="@+id/tableRowTextView"
			android:background="@color/md_blue_A700"
			android:gravity="center"
			>
			<TextView
				android:id="@+id/textViewNo"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Product"
				android:layout_weight="1"
				android:textColor="@color/md_white_1000"
				android:gravity="left"
				/>
			<TextView
				android:id="@+id/textViewBank"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Price (Rp)"
				android:layout_weight="1.2"
				android:textColor="@color/md_white_1000"
				android:gravity="left"
				/>
			<TextView
				android:id="@+id/textViewVA"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Buy"
				android:layout_weight="1.5"
				android:textColor="@color/md_white_1000"
				android:gravity="left"
				/>

		</TableRow>

		<LinearLayout android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center|top"
			android:orientation="horizontal"
			>

			<TextView
				android:id="@+id/textProduct1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="product1"
				android:layout_weight="1"
				/>
			<TextView
				android:id="@+id/textPrice1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="price1"
				android:layout_weight="1.2"
				/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center|top"
				android:orientation="horizontal"
				android:layout_weight="1.5"
				>
				<ImageButton
					android:id="@+id/btn_buy1"
					android:layout_width="@dimen/dimenButtonWidth"
					android:layout_height="@dimen/dimenButtonHeight"
					android:src="@drawable/bg_submit"
					android:background="@android:color/transparent"
					android:scaleType="fitXY"
					android:layout_marginBottom="20dp"
					/>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="20dp"
			android:gravity="center|top"
			android:orientation="horizontal"
			/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center|top"
			android:orientation="horizontal"
			>

			<TextView
				android:id="@+id/textProduct2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="product2"
				android:layout_weight="1"
				/>
			<TextView
				android:id="@+id/textPrice2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="price2"
				android:layout_weight="1.2"
				/>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center|top"
				android:orientation="horizontal"
				android:layout_weight="1.5"
				>

				<ImageButton
					android:id="@+id/btn_buy2"
					android:layout_width="@dimen/dimenButtonWidth"
					android:layout_height="@dimen/dimenButtonHeight"
					android:src="@drawable/bg_submit"
					android:background="@android:color/transparent"
					android:scaleType="fitXY"
					android:layout_marginBottom="20dp"
					/>
			</LinearLayout>
		</LinearLayout>

		<ScrollView
			android:id="@+id/SCROLLER_ID"
			android:layout_width="fill_parent"
			android:layout_height="100dp"
			android:scrollbars="vertical"
			android:fillViewport="true"
			android:visibility="gone"
			>
			<TextView
				android:id="@+id/textRespon"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:text="respon"
				android:scrollbars="vertical"
				/>
		</ScrollView>

	</LinearLayout>
</LinearLayout>