<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<id.co.kynga.app.control.RecyclingImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/kyngmob_background"
        android:scaleType="fitXY" />
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:gravity="center|top"
        android:orientation="vertical"
        android:layout_marginTop="30dp">
		<id.co.kynga.app.control.RecyclingImageView
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_logo_thundr_big"
            android:scaleType="fitXY"
            android:layout_marginBottom="60dp"
            />
		<android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:theme="@style/MStarTextFloat"
            style="@style/MStarTextFloat">

			<TextView
				android:id="@+id/lbl_verify"
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp"
				android:layout_marginBottom="10dp"
				android:text="@string/enter_phone_number"
				style="@style/MStarTextView2"
				android:textSize="@dimen/text_size_large"
				android:textStyle="bold"
				android:gravity="center"/>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="horizontal"
				android:background="@color/white">
				<com.hbb20.CountryCodePicker
					android:id="@+id/ccp"
					android:layout_width="wrap_content"
					android:layout_height="50dp"
					android:gravity="center"
					app:textSize="@dimen/text_size_medium"
					app:contentColor="@color/md_grey_400"
					app:defaultNameCode="ID"
					android:layout_marginRight="10dp"
					/>
				<id.co.kynga.app.control.PrefixEditText
					android:layout_width="match_parent"
					android:layout_height="50dp"
					android:id="@+id/txt_phone_number"
					android:textColor="@color/md_grey_400"
					android:textColorHint="@color/md_grey_400"
					android:maxLength="30"
					android:inputType="number"
					android:textSize="@dimen/text_size_medium"
					android:layout_toRightOf="@+id/ccp"
					android:cursorVisible="true"
					android:textColorLink="@color/black" />
			</RelativeLayout>
		</android.support.design.widget.TextInputLayout>

		<ImageButton
			android:id="@+id/btn_login"
            android:layout_width="@dimen/dimenButtonWidth"
            android:layout_height="@dimen/dimenButtonHeight"
            android:layout_marginTop="150dp"
            android:src="@drawable/bg_submit2"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"/>
	</LinearLayout>
</RelativeLayout>