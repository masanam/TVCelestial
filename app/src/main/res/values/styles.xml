<resources>

	<style name="MaterialDrawerTheme.mstar.Light.DarkToolbar.TranslucentStatus"
		parent="MaterialDrawerTheme.Light.DarkToolbar">
		<item name="colorPrimary">@color/colorBase</item>
		<item name="colorPrimaryDark">@color/colorBase</item>
		<item name="colorAccent">@color/colorBase</item>
	</style>

	<style name="MStarTextView1">
		<item name="android:textSize">@dimen/dimenTextSize1</item>
		<item name="android:textColor">@color/colorPlaceholder</item>
		<item name="fontPath">fonts/Avenir-Book.ttf</item>
	</style>

	<style name="AppFullscreenTheme" parent="android:Theme.NoTitleBar.Fullscreen">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowFullscreen">true</item>
	</style>

	<style name="MStarEditText1">
		<item name="colorControlNormal">@color/colorBase</item>
